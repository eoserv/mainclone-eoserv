ifeq ($(MYSQL),1)
	LIBS += $(MYSQL_LIB)
	CFLAGS += -DDATABASE_MYSQL
	CXXFLAGS += -DDATABASE_MYSQL
endif

ifeq ($(SQLITE),1)
	LIBS += $(SQLITE_LIB)
	CFLAGS += -DDATABASE_SQLITE
	CXXFLAGS += -DDATABASE_SQLITE
endif

include $(MAKEFILE_INC)

ifeq ($(POLL),1)
	CFLAGS += -DSOCKET_POLL
	CXXFLAGS += -DSOCKET_POLL
endif

.PHONY: all clean create-build-dirs

all: eoserv

clean:
	${RM} $(OBJ) $(DEBUG_BIN) $(RELEASE_BIN)

create-build-dirs:
	-@mkdir $(OBJDIR)
	-@mkdir $(OBJDIR)/container
	-@mkdir $(OBJDIR)/extra
	-@mkdir $(OBJDIR)/handlers

$(OBJDIR)/%.o: $(SRCDIR)/%.c
	$(CC) -I./$(SRCDIR)/ -I./$(SRCDIR)/container/ -I./$(SRCDIR)/extra/ -I./$(SRCDIR)/handlers/ -c $< -o $@ $(CFLAGS)

$(OBJDIR)/%.o: $(SRCDIR)/%.cpp
	$(CXX) -I./$(SRCDIR)/ -I./$(SRCDIR)/container/ -I./$(SRCDIR)/extra/ -I./$(SRCDIR)/handlers/ -c $< -o $@ $(CXXFLAGS)

eoserv: create-build-dirs $(OBJ)
	$(CXX) $(OBJ) -o $(BIN) $(LIBS) $(LDFLAGS)
